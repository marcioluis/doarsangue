<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        tools:text="Jorge Necessitado"
        android:id="@+id/nomeRecebedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        tools:text="Hemocentro HistÃ³ria Nova"
        android:id="@+id/localDoacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nomeRecebedor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        tools:text="AB+"
        android:id="@+id/tipoSanguineo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_margin="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/nomeRecebedor"
        app:layout_constraintRight_toLeftOf="@+id/detalhesButton"
        android:layout_marginRight="0dp" />

    <ImageButton
        android:id="@+id/detalhesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_more_vert"
        android:background="?android:selectableItemBackground"
        android:layout_margin="16dp"
        android:contentDescription="Detalhes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
